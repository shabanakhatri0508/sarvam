    <style name="ActionIcon">
        <item name="android:layout_width">@dimen/def_icons_size</item>
        <item name="android:layout_height">@dimen/def_icons_size</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="otpEditTextStyle" parent="@style/Roboto.Medium">
        <item name="android:layout_width">@dimen/otp_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <style name="smallButtonStyle" parent="Roboto.Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/huge_padding</item>
        <item name="android:paddingEnd">@dimen/huge_padding</item>
        <item name="android:paddingTop">@dimen/medium_padding</item>
        <item name="android:paddingBottom">@dimen/medium_padding</item>
        <item name="background">@drawable/btn_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
